<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_border"
    android:orientation="vertical"
    tools:context=".GameWhoKnowsKnowsFragment">

    <TextView
        android:id="@+id/who_knows_question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Pitanje 1 / 5"
        android:textColor="?colorOnPrimary" />

    <TextView
        android:id="@+id/who_knows_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:text="Koje godine je po\u010deo Prvi svetski rat?"
        android:textColor="?colorOnPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/who_knows_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18sp"
            android:background="@drawable/custom_border"
            android:text="1918." />

        <Button
            android:id="@+id/who_knows_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18sp"
            android:background="@drawable/custom_border"
            android:text="1890." />

        <Button
            android:id="@+id/who_knows_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18sp"
            android:background="@drawable/custom_border"
            android:text="1914." />

        <Button
            android:id="@+id/who_knows_answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18sp"
            android:background="@drawable/custom_border"
            android:text="1963." />

    </LinearLayout>

</LinearLayout>