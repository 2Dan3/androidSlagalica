                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Parlament"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Komisija"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Unija"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Radost"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/asocFourthColumn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:id="@+id/asocFourthSolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Pingvin"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="openField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_smoked"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Juzni pol"
                    android:textColor="@color/blue_dark"
                    android:textStyle="bold"
                    android:textSize="14dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>