<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchSummaryFragment"
    android:background="@drawable/fragment_border">

    <TextView
        android:id="@+id/tvWinnerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Pobednik: player1Username !"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/summaryColumnPlayer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider3"
        app:layout_constraintTop_toBottomOf="@id/tvWinnerUsername" >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/trophy" />
        <TextView
            android:id="@+id/tvPointsWonPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="+150"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/icons8_star_48" />
        <TextView
            android:id="@+id/tvStarsWonPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="+13"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/ic_token" />
        <TextView
            android:id="@+id/tvTokensWonPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="+1"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/summaryColumnPlayer1"
        app:layout_constraintTop_toBottomOf="@id/tvWinnerUsername" />

    <LinearLayout
        android:id="@+id/summaryColumnPlayer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWinnerUsername" >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/trophy" />
        <TextView
            android:id="@+id/tvPointsWonPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textColor="?colorOnPrimary"
            android:text="+100"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/icons8_star_48" />
        <TextView
            android:id="@+id/tvStarsWonPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textColor="?colorOnPrimary"
            android:text="-8"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="30dp"
            android:src="@drawable/ic_token" />
        <TextView
            android:id="@+id/tvTokensWonPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textColor="?colorOnPrimary"
            android:text="+0"
            android:textSize="16sp"
            android:textStyle="bold|italic"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>