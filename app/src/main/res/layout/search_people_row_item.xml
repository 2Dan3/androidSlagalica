<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowContainerParent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:background="@drawable/custom_border">


    <androidx.cardview.widget.CardView
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:cardCornerRadius="30dp">
        <ImageView
            android:contentDescription="@string/profile_picture_description"
            android:id="@+id/ivSearchRecyclerRowPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_default_profile" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight=".4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/tvSearchRecyclerRowUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LissaPuzzlerSince98"
            android:textColor="@color/white_smoked"
            android:textSize="18sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icons8_star_48" />

            <TextView
                android:id="@+id/tvSearchRecyclerRowStars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white_smoked"
                android:textSize="18sp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:layout_marginRight="0sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/trophy" />

        <TextView
            android:textColor="@color/white_smoked"
            android:id="@+id/tvSearchRecyclerRowRank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10sp"
            android:text="254"
            android:textSize="20sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

</LinearLayout>
