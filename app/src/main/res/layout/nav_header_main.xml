<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:layout_marginTop="24dp"
    android:background="@drawable/custom_nav_border"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawer_profile_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingTop="6dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@mipmap/ic_profile_icon_round" />

    <TextView
        android:id="@+id/drawer_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white_clear" />

    <TextView
        android:id="@+id/drawer_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/orange_light" />
</LinearLayout>